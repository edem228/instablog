{% extends "::base.html.twig" %}

{% block title %}BlogBundle:Post:show{% endblock %}

{% block body %}
    <h1>Welcome to the Post:show page</h1>
    <div>
        <h3>{{ post.title }}</h3>
    </div>
    <div>
        {{ post.content }}
    </div>
    <ul>
        <li>
            <a href="{{ path('post_list') }}">Tous les articles</a>
        </li>
        <li>
            <a href="{{ path('post_edit', { 'id': post.id }) }}">Modifier cet article</a>
        </li>
    </ul>
    </ul>
{% endblock %}
